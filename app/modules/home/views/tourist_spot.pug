            h2 #{place.strPlaceName} 
            // Nav tabs
            ul.nav.nav-tabs.md-tabs(role='tablist')
                li.nav-item
                    a.nav-link.active(data-toggle='tab', href='#pictures', role='tab')
                        i.icofont.icofont-ui-camera
                        | &nbsp Pictures
                    .slide
                li.nav-item
                    if place.strHistory == NULL
                        a.nav-link.disabled(data-toggle='tab', role='tab')
                            i.ti-file
                            | &nbsp History
                        .slide
                    else
                        a.nav-link(data-toggle='tab', href='#history', role='tab')
