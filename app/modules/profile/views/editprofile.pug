  body#top
        each user in usertab
            // Header
            header#header
              .inner
                  a.image.avatar(href='#')
                  img(src='/images/profile_pictures/'+ user.strProfilePicture, alt='')
                  br
                  h1 Update Your Profile
                  br
                  h1
                  form(method="POST" action="/profile/-/edit" enctype='multipart/form-data')
                    .control-group
                        label.control-label(for='username') Username
                        .controls
                            input#username(type='text', value=user.strUsername name="user" required, readonly)
                    .control-group
                        label.control-label(for='username') First Name
                        .controls
                            input#username(type='text', value=user.strFname name="fname" required)
                    .control-group
                        label.control-label(for='username') Last Name
                        .controls
                            input#username(type='text', value=user.strLname name="lname" required)
                    .control-group
                        label.control-label(for='username') Email
                        .controls
                            input#username(type='email', value=user.strEmail name="email" required)
                    .control-group
                        label.control-label(for='username') Short Description of you
                        .controls
                            input#username(type='text', value=user.strInfo name="info" maxlength='60')
                    .field
                        .control
                            label.label8 Profile Picture
                            br
                            input.file-input(type='file', name='profilepic', accept='image/*')
                    hr(style='border: 0.5px solid #990000')
                    .control-group
                        label.control-label(for='username') Old Password
                        .controls
                            input#username(type='password', name="oldpass" required)
                    .control-group
                        label.control-label(for='username') New Password
                        .controls
                            input#username(type='password', name="newpass" required)
                    .control-group
                        label.control-label(for='username') Confirm Password
                        .controls
                            input#username(type='password', name="confirm" required)
                    br
                    .control
                            input.button(type="submit" value="Save")
                    br
                    .control
                            a.button(class="button", href="/profile") Back                   
            #main
              // One
              section#one
                  header.major
                    h2
                      | About Me
                      // Description
                  p #{user.strInfo}
